pipeline {
    agent any

    triggers { 
        githubPush()  
    }

    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        DOCKER_HUB_REPO = 'tathagata125/calculator'
        GITHUB_REPO_URL = 'https://github.com/tathagata125/SoftwareMini.git'
        DOCKER_HUB_CREDENTIALS = credentials('DockerHubCred')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clone GitHub repo
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image using Dockerfile
                    //docker.build("${DOCKER_IMAGE_NAME}", '.')
                      sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    sh "echo ${DOCKER_HUB_CREDENTIALS_PSW} | docker login -u ${DOCKER_HUB_CREDENTIALS_USR} --password-stdin"

                    // Tag and push the Docker image
                    sh "docker tag ${DOCKER_IMAGE_NAME} ${DOCKER_HUB_REPO}:latest"
                    sh "docker push ${DOCKER_HUB_REPO}:latest"
                    }
                 }
            }
        }

    }

}
